@model web2.Areas.Admin.Data.ChartView
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <H2 class="col-6 " style="text-align:center">Bảng thống kê  </H2>
        <div class="col-3"></div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div>
                <canvas id="myChart"></canvas>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row pt-5">
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Quản lý giáo viên</h4>
                    <a href="@Url.Action("Manage_Teacher", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Quản lý học viên</h4>
                    <a href="@Url.Action("Manage_Student", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Quản lý lớp học</h4>
                    <a href="@Url.Action("Manage_Classes", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Quản lý Khoá học</h4>
                    <a href="@Url.Action("Manage_Course", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Gửi thông báo qua mail</h4>
                    <a href="@Url.Action("Send_Notification", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Quản lý hoá đơn</h4>
                    <a href="@Url.Action("Manage_Invoice", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 pt-5">
            <div class="card">
                <div class="card-body d-grid">
                    <h4 class="card-title">Xem thời khoá biểu</h4>
                    <a href="@Url.Action("Manage_Schedule", "HomeAdmin", new { area = "Admin" })" class="btn btn-primary btn-block">Xem</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script>
      var ctx = document.getElementById('myChart').getContext('2d');
    var minValue = 0;  
    var maxValue = Math.max(@Model.NumberOfStudents, @Model.NumberOfTeachers, @Model.NumberOfCourses, @Model.NumberOfClasses) + 1;

    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Students', 'Teachers', 'Courses', 'Classes'],
            datasets: [{
                label: 'Number of Entities',
                data: [@Model.NumberOfStudents, @Model.NumberOfTeachers, @Model.NumberOfCourses, @Model.NumberOfClasses],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                x: {
                    beginAtZero: true
                },
                y: {
                    beginAtZero: true,
                    max: maxValue,  
                    ticks: {
                        stepSize: 1 
                    }
                }
            }
        }
    });

</script>