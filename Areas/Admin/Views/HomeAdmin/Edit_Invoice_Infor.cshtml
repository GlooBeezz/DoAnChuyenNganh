@model web2.Models.HoaDon
@{
    ViewBag.Title = "Edit_Invoice_Infor";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="row">
    <div class="col display-5" style="text-align:center">Chỉnh sửa hoá đơn</div>
</div>
<hr />
<div class="row">
    @using (Html.BeginForm("Submit_Edit_Invoice_Infor", "HomeAdmin", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-sm-12 col-md-6 col-xl-6 mb-3 mt-3">
                @Html.LabelFor(model => model.Ma_hoa_don, "Mã hoá đơn", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Ma_hoa_don, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Ma_hoa_don, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-12 col-md-6 col-xl-6 mb-3 mt-3">
                @Html.LabelFor(model => model.Ma_dang_ky, "Mã đăng ký", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Ma_dang_ky, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ma_dang_ky, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-12 col-md-6 col-xl-6 mb-3 mt-3">
                @Html.LabelFor(model => model.Ngay_tao, "Ngày tạo hoá đơn(ngày cũ: "+Model.NgayFormatted+" )", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Ngay_tao, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.Ngay_tao, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-12 col-md-6 col-xl-6 mb-3 mt-3">
                @Html.LabelFor(model => model.Tong_tien, "Tổng tiền", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Tong_tien, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                @Html.ValidationMessageFor(model => model.Tong_tien, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-12 col-md-6 col-xl-6 mb-3 mt-3 border-1">
                @Html.LabelFor(model => model.Trang_thai_thanh_toan, "Trạng thái thanh toán", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Trang_thai_thanh_toan, new { htmlAttributes = new { @class = "form-check-input" } })
                @Html.ValidationMessageFor(model => model.Trang_thai_thanh_toan, "", new { @class = "text-danger" })
            </div>

            <div class="row d-grid gap-2">
                <input class="btn btn-success" type="submit" name="submit" value="Lưu" >
            </div>
        </div>
    }
</div>
