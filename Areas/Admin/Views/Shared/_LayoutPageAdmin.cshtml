<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang quản lý Phố Thị Music</title>
    <link rel="stylesheet" href="~/Areas/Admin/Style/adminSite.css" />
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <div class="wrapper ">
        <!-- Sidebar -->
        <aside id="sidebar" style="margin-top:60px;position:fixed;height:78.5%">
            <div class="h-100 bg-primary">
                <div class="sidebar-logo">
                    <a href="~/Areas/Admin/Views/HomeAdmin/Index.cshtml">Phố thị Music <br /><p>Trung tâm quản lý</p></a>
                </div>
                <!-- Sidebar Navigation -->
                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Các chức năng
                    </li>
                    <li class="sidebar-item">
                        <a href="~/Areas/Admin/Views/HomeAdmin/Index.cshtml" class="sidebar-link">
                            <i class="fa-solid fa-house pe-2"></i>
                            Trang chủ
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#pages"
                           aria-expanded="false" aria-controls="pages">
                            <i class="fa-regular fa-folder pe-2"></i>
                            Quản lí
                        </a>
                        <ul id="pages" class="sidebar-dropdown list-unstyled collapse bg-white" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Học viên</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Giáo viên</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Lớp học</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Khoá học</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#dashboard"
                           aria-expanded="false" aria-controls="dashboard">
                            <i class="fa-solid fa-chart-simple pe-2"></i>
                            Các biểu đồ
                        </a>
                        <ul id="dashboard" class="sidebar-dropdown list-unstyled collapse bg-white" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Các biểu đồ phân tích</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Các biểu đồ doanh thu</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#auth"
                           aria-expanded="false" aria-controls="auth">
                            <i class="fa-regular fa-user pe-2"></i>
                            Tài khoản
                        </a>
                        <ul id="auth" class="sidebar-dropdown list-unstyled collapse bg-white" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Tạo tài khoản</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Chỉnh sửa tài khoản</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-danger">Xoá tài khoản </a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse" data-bs-target="#notification"
                           aria-expanded="false" aria-controls="notification">
                            <i class="fa-solid fa-sliders pe-2"></i>
                            Thông báo
                        </a>
                        <ul id="notification" class="sidebar-dropdown list-unstyled collapse bg-white" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Tạo thông báo</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link text-black">Chỉnh sửa thông báo</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </aside>
        <!-- Main Component -->
        <div class="main ">
            <nav class="navbar navbar-expand px-3 border-bottom bg-primary fixed-top">
                <!-- Button for sidebar toggle -->
                <div class="container-fluid">
                    <button class="btn" type="button" data-bs-theme="dark">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <span style="width:50%;min-width:0"></span>
                    <div class="input-group input-group-sm ps-5 pe-5">
                        <input class="form-control input-sm" type="text" placeholder="Nhập thông tin tìm kiếm">
                        <button class="btn btn-success" type="submit">Tìm</button>
                    </div>
                    @*<div class="nav-item dropdown ">
                        <a class="navbar-brand nav-link dropdown-toggle " href="#" role="button" data-bs-toggle="dropdown">
                            <img src="~/source/logo.jpg" alt="Avatar Logo" style="width:40px;" class="rounded-pill">
                        </a>
                        <ul class="dropdown-menu">
                            <li><h5 class="dropdown-item">Tên người dùng</h5></li>
                            <li><a class="dropdown-item" href="#">Chỉnh sửa thông tin</a></li>
                            <li><a class="dropdown-item text-danger" href="#">Đăng xuất</a></li>
                        </ul>
                    </div>*@
                    <div class="btn-group">
                        <button type="button" class="btn  dropdown-toggle text-white user-profile-dropdown" data-bs-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false" id="dropdownMenuButton">
                            <img src="~/source/logo.jpg" alt="Profile Picture" class="rounded-circle" width="30" height="30">
                            Tên người dùng
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Tài khoản</a>
                            <a class="dropdown-item" href="#">Chỉnh sửa thông tin</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item text-danger" href="#">Đăng xuất</a>
                        </div>
                    </div>
                </div> 
            </nav>
            <main class="content px-3 py-2" style="margin-top:60px; height:100%">
                <div class="container-fluid">
                    <div class="mb-3">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="~/Areas/Admin/Scripts/adminSite.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
</body>
</html>

