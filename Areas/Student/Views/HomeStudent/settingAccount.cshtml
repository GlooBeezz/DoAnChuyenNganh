
@{
    ViewBag.Title = "settingAccount";
    Layout = "~/Areas/Student/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Active = "settingaccount";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>settingAccount</title>
    <link rel="stylesheet" type="text/css" href="~/Content/StudentSite.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: sans-serif;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Hồ sơ của tôi</h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <strong>Họ Và Tên:</strong> <input type="text" class="form-control" value="Lê Thành Đạt">
                            </li>
                            <li class="list-group-item">
                                <strong>Email:</strong> <input type="email" class="form-control" value="abc@Gmail.com" />
                            </li>
                            <li class="list-group-item">
                                <strong>Địa Chỉ:</strong> <input type="text" class="form-control" value="180 Cao lỗ" />
                            </li>
                            <li class="list-group-item">
                                <strong>Số điện thoại:</strong> <input type="number" class="form-control" value="0987654321">
                            </li>
                            <li class="list-group-item">
                                <strong>Ngày sinh:</strong> <input type="date" class="form-control" value="">
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-primary">Chỉnh Sửa</button> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
