@model  web2.Models.NguoiDung
@{
    ViewBag.Title = "settingAccount";
    Layout = "~/Areas/Student/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Active = "settingaccount";
   
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>settingAccount</title>
    <link rel="stylesheet" type="text/css" href="~/Content/StudentSite.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: sans-serif;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Hồ sơ của tôi</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("settingAccount", "HomeStudent", new { area = "Student" }))
                        {
                            @Html.AntiForgeryToken()
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Họ Và Tên:</strong>
                                    @Html.TextBoxFor(m => m.Ho_va_ten, new { @class = "form-control" })
                                </li>
                                <li class="list-group-item">
                                    <strong>Email:</strong>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </li>
                                <li class="list-group-item">
                                    <strong>Địa Chỉ:</strong>
                                    @Html.TextBoxFor(m => m.Dia_chi, new { @class = "form-control" })
                                </li>
                                <li class="list-group-item">
                                    <strong>Số điện thoại:</strong>
                                    @Html.TextBoxFor(m => m.Sdt, new { @class = "form-control" })
                                </li>
                                <li class="list-group-item">
                                    <strong>Ngày sinh:</strong>
                                    @Html.TextBoxFor(m => m.Ngay_sinh, new { @class = "form-control" })
                                </li>
                            </ul>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Chỉnh Sửa</button>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
