@model  web2.Models.NguoiDung
@{
    ViewBag.Title = "settingAccount";
    Layout = "~/Areas/Student/Views/Shared/_LayoutStudent.cshtml";
    ViewBag.Active = "settingaccount";
    web2.Models.quanLyTrungTamDayDanEntities db = new web2.Models.quanLyTrungTamDayDanEntities();
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>settingAccount</title>
    <link rel="stylesheet" type="text/css" href="~/Content/StudentSite.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: sans-serif;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Hồ sơ của tôi</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="@Url.Action("settingAccount", "HomeStudent", new { area = "Student" })" method="post" id="inputForm">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <strong>Họ Và Tên:</strong> <input type="text" class="form-control" name="Ho_ten" value="@Model.Ho_va_ten">
                                </li>
                                <li class="list-group-item">
                                    <strong>Email:</strong> <input type="email" class="form-control" name="email" value="@Model.Email" />
                                </li>
                                <li class="list-group-item">
                                    <strong>Địa Chỉ:</strong> <input type="text" class="form-control" name="diachi" value="@Model.Dia_chi" />
                                </li>
                                <li class="list-group-item">
                                    <strong>Số điện thoại:</strong> <input type="number" class="form-control" maxlength="11" pattern="[0-9]{10,11}" name="sdt" value="@Model.Sdt">
                                </li>
                                <li class="list-group-item">
                                    <strong>Ngày sinh:</strong> <input type="date" class="form-control" name="ngáyinh" value="@Model.Ngay_sinh">
                                </li>
                            </ul>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary" asp-action="SettingAccount">Chỉnh Sửa</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#inputForm').submit(function (event) {
                var isValid = true;
                // Kiểm tra các trường dữ liệu, nếu trống thì đánh dấu là không hợp lệ
                $('#inputForm input[type="text"]').each(function () {
                    if ($.trim($(this).val()) === '') {
                        isValid = false;
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
</body>
</html>
