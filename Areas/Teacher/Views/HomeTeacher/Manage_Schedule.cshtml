@{
    ViewBag.Title = "Manage Schedule";
    Layout = "~/Areas/Teacher/Views/Shared/_LayoutPageTeacher.cshtml";
}

@model List<web2.Models.ThoiGianBieu>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thời Khóa Biểu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container1 {
            width: 80%;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <header>
        <h1>Thời Khóa Biểu</h1>
    </header>

    <div class="container1">
        <table>
            <thead>
                <tr>
                    <th>Date/Time</th>
                    <th>Sunday</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var timeSlot in Model.OrderBy(g => g.Thoi_gian_bat_dau))
                {
                    <tr>
                        <td>
                            @timeSlot.Thoi_gian_bat_dau.ToString("hh\\:mm") - @timeSlot.Thoi_gian_ket_thuc.ToString("hh\\:mm")
                        </td>

                        @foreach (var dayOfWeek in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>())
                        {
                            var previousDay = dayOfWeek == 0 ? DayOfWeek.Saturday : dayOfWeek - 1;
                            var currentDay = dayOfWeek;

                            var classForTimeAndDay = Model.FirstOrDefault(c => c.Hoc_vao_thu?.ToLower() == currentDay.ToString().ToLower() &&
                                                                                c.Thoi_gian_bat_dau == timeSlot.Thoi_gian_bat_dau);
                            <td>
                                @if (classForTimeAndDay != null)
                                {
                                    <strong>@classForTimeAndDay.Ma_thoi_gian_bieu</strong><br />
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a style="text-align:right" href="@Url.Action("Index", "HomeTeacher")" class="btn btn-primary ml-auto">Trở lại quản lý giáo viên</a>
</body>
</html>
